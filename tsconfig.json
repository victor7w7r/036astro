{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": { "@/*": ["src/lib/*"] },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ES2020"
  },
  "extends": "./tsconfig.app.json"
}
